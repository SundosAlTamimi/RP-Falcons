<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:background="@color/layer1"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:gravity="center"
        android:text="@string/menu_registration"
        android:textColor="@color/text_color"
        android:textSize="17sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/layer3"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="10dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="155dp"
                    android:layout_height="25dp"
                    android:text="@string/menu_category"
                    android:textColor="@color/text_color"
                    android:textSize="17sp" />

                <Spinner
                    android:id="@+id/categoriesSpinner"
                    android:layout_width="232dp"
                    android:layout_height="30dp"
                    android:paddingEnd="20sp"
                    android:paddingRight="20dp"
                    android:text="@string/menu_registration"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="17sp" />

                <Button
                    android:id="@+id/addMenuCategory"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginHorizontal="2dp"
                    android:background="@drawable/add" />

                <Button
                    android:id="@+id/deletC"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginHorizontal="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/delete_m" />

            </LinearLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:background="@drawable/focused_table">

                <TableLayout
                    android:id="@+id/menu_"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </TableLayout>
            </ScrollView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="155dp"
                    android:layout_height="30dp"
                    android:text="@string/menu_name"
                    android:textColor="@color/text_color"
                    android:textSize="17sp" />

                <EditText
                    android:id="@+id/menuNameEditText"
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:background="@color/layer1"
                    android:imeOptions="actionNext"
                    android:paddingHorizontal="10dp"
                    android:textColor="@color/colorPrimaryDark" />


                <CheckBox
                    android:id="@+id/notUsedCheckBox"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/not_used"
                    android:textColor="@color/text_color" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="155dp"
                    android:layout_height="30dp"
                    android:text="@string/price"
                    android:textColor="@color/text_color"
                    android:textSize="17sp" />

                <EditText
                    android:id="@+id/priceEditText"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@color/layer1"
                    android:imeOptions="actionNext"
                    android:inputType="numberDecimal"
                    android:paddingHorizontal="10dp"
                    android:textColor="@color/colorPrimaryDark" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="155dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="5dp"
                    android:text="@string/tax_type"
                    android:textColor="@color/text_color"
                    android:textSize="17sp" />


                <RadioGroup
                    android:id="@+id/taxTypRadioGroup"
                    android:layout_width="300dp"
                    android:layout_height="30dp"
                    android:orientation="horizontal"
                    android:textColor="@color/text_color">

                    <RadioButton
                        android:id="@+id/tax_"
                        android:layout_width="140dp"
                        android:layout_height="match_parent"
                        android:text="@string/tax"
                        android:textColor="@color/text_color" />

                    <RadioButton
                        android:id="@+id/no_tax"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="40dp"
                        android:layout_marginStart="40dp"
                        android:checked="false"
                        android:text="@string/no_tax"
                        android:textColor="@color/text_color" />

                </RadioGroup>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="155dp"
                    android:layout_height="30dp"
                    android:text="@string/tax_percent"
                    android:textColor="@color/text_color"
                    android:textSize="17sp" />

                <EditText
                    android:id="@+id/taxPercentEditText"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:layout_gravity="bottom"
                    android:background="@color/layer1"
                    android:imeOptions="actionNext"
                    android:inputType="numberDecimal"
                    android:paddingHorizontal="10dp"
                    android:textColor="@color/colorPrimaryDark" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="155dp"
                    android:layout_height="30dp"
                    android:text="@string/secondary_name"
                    android:textColor="@color/text_color"
                    android:textSize="17sp" />

                <EditText
                    android:id="@+id/secondaryNameEditText"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_gravity="bottom"
                    android:background="@color/layer1"
                    android:imeOptions="actionNext"
                    android:paddingHorizontal="10dp"
                    android:textColor="@color/colorPrimaryDark" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="155dp"
                    android:layout_height="30dp"
                    android:text="@string/kitchen_name"
                    android:textColor="@color/text_color"
                    android:textSize="17sp" />

                <EditText
                    android:id="@+id/kitchenAliasEditText"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@color/layer1"
                    android:imeOptions="actionNext"
                    android:paddingHorizontal="10dp"
                    android:textColor="@color/colorPrimaryDark" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="155dp"
                    android:layout_height="30dp"
                    android:text="@string/item_barcode"
                    android:textColor="@color/text_color"
                    android:textSize="17sp" />

                <EditText
                    android:id="@+id/itemBarcodeEditText"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@color/layer1"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:paddingHorizontal="10dp"
                    android:textColor="@color/colorPrimaryDark" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="155dp"
                    android:layout_height="30dp"
                    android:text="@string/status"
                    android:textColor="@color/text_color"
                    android:textSize="17sp" />

                <RadioGroup
                    android:id="@+id/statusRadioGroup"
                    android:layout_width="300dp"
                    android:layout_height="30dp"
                    android:orientation="horizontal"
                    android:textColor="@color/text_color">

                    <RadioButton
                        android:id="@+id/available"
                        android:layout_width="140dp"
                        android:layout_height="match_parent"
                        android:text="@string/available"
                        android:textColor="@color/text_color" />

                    <RadioButton
                        android:id="@+id/out_of_stock"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="40dp"
                        android:layout_marginStart="40dp"
                        android:checked="false"
                        android:text="@string/out_of_stock"
                        android:textColor="@color/text_color" />

                </RadioGroup>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="155dp"
                    android:layout_height="30dp"
                    android:text="@string/item_type"
                    android:textColor="@color/text_color"
                    android:textSize="17sp" />

                <RadioGroup
                    android:id="@+id/itemTypeRadioGroup"
                    android:layout_width="300dp"
                    android:layout_height="30dp"
                    android:orientation="horizontal"
                    android:textColor="@color/text_color">

                    <RadioButton
                        android:id="@+id/ready"
                        android:layout_width="140dp"
                        android:layout_height="match_parent"
                        android:text="@string/ready_item"
                        android:textColor="@color/text_color" />

                    <RadioButton
                        android:id="@+id/row_material"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="40dp"
                        android:layout_marginStart="40dp"
                        android:checked="false"
                        android:text="@string/row_material"
                        android:textColor="@color/text_color" />

                </RadioGroup>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginVertical="20dp"
            android:background="@color/text_color"
            android:padding="10dp"></LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="20sp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="65dp"
                    android:layout_height="30dp"
                    android:text="@string/recipe"
                    android:textColor="@color/text_color"
                    android:textSize="17sp" />

                <Button
                    android:id="@+id/addRecipe"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/add" />

            </LinearLayout>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/focused_table">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:layout_margin="1dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="25dp"
                        android:layout_margin="1dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/barcode"
                        android:textColor="@color/exit"
                        android:textSize="13sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="25dp"
                        android:layout_margin="1dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/item"
                        android:textColor="@color/exit"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="25dp"
                        android:layout_margin="1dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/unit"
                        android:textColor="@color/exit"
                        android:textSize="13sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="25dp"
                        android:layout_margin="1dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/qty"
                        android:textColor="@color/exit"
                        android:textSize="13sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="25dp"
                        android:layout_margin="1dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/cost"
                        android:textColor="@color/exit"
                        android:textSize="13sp"
                        android:textStyle="bold" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:layout_margin="1dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="1dp"
                        android:layout_weight="1"
                        android:background="@color/text_color"
                        android:gravity="center" />

                </TableRow>

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TableLayout
                        android:id="@+id/recipeTable"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp">


                    </TableLayout>
                </ScrollView>
            </TableLayout>

            <EditText
                android:id="@+id/descriptionEditText"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:background="@color/layer1"
                android:gravity="top"
                android:hint="@string/description"
                android:imeOptions="actionNext"
                android:padding="5dp"
                android:textColor="@color/colorPrimaryDark"
                android:textColorHint="@color/gray"
                android:textSize="13sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:text="@string/inventory_unit"
                        android:textColor="@color/text_color"
                        android:textSize="17sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:orientation="horizontal">

                        <Spinner
                            android:id="@+id/unitSpinner"
                            android:layout_width="145dp"
                            android:layout_height="30dp"
                            android:paddingEnd="20sp"
                            android:paddingHorizontal="10dp"
                            android:paddingRight="20dp"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="17sp" />

                        <Button
                            android:id="@+id/addInventoryUnit"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginHorizontal="2dp"
                            android:background="@drawable/add" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:text="@string/wastage_percent"
                        android:textColor="@color/text_color"
                        android:textSize="17sp" />

                    <EditText
                        android:id="@+id/wastagePercentEditText"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:background="@color/layer1"
                        android:imeOptions="actionDone"
                        android:inputType="numberDecimal"
                        android:paddingHorizontal="10dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="17sp" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/itemPicture"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginStart="15dp"
                    android:background="@drawable/item_pic_icon"
                    android:orientation="vertical">


                </ImageView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/discountAvailableCheckBox"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/discount_available"
                    android:textColor="@color/text_color" />

                <CheckBox
                    android:id="@+id/pointAvailableCheckBox"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/point_available"
                    android:textColor="@color/text_color" />

                <CheckBox
                    android:id="@+id/openPriceCheckBox"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/open_price"
                    android:textColor="@color/text_color" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="185dp"
                    android:layout_height="25dp"
                    android:text="@string/kitchen_printers"
                    android:textColor="@color/text_color"
                    android:textSize="17sp" />

                <Spinner
                    android:id="@+id/printersSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:paddingEnd="20sp"
                    android:paddingRight="20dp"
                    android:text="@string/menu_registration"
                    android:textColor="@color/text_color"
                    android:textSize="17sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/newButton"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@color/dark_blue"
                    android:text="@string/new_"
                    android:textColor="@color/layer1"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/saveButton"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@color/colorPrimaryLight"
                    android:text="@string/save"
                    android:textColor="@color/layer1"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/updateButton"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@color/exit_hover"
                    android:text="@string/update"
                    android:textColor="@color/layer1"
                    android:textStyle="bold" />
                <Button
                    android:id="@+id/exitButton"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@color/exit"
                    android:text="@string/exit"
                    android:textColor="@color/layer1"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>