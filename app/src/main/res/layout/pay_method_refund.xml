<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="850dp"
    android:layout_height="match_parent"
    android:background="@color/layer3"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:id="@+id/textView54"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/right_border"
        android:gravity="center"
        android:text="@string/payMethodRefund"
        android:textColor="@color/text_color"
        android:textSize="20sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView66"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Net_Total"
            android:textColor="@color/text_color"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/nettotal"
            android:layout_width="172dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:background="@drawable/focused_table"
            android:gravity="center"
            android:text="0.00"
            android:textColor="@color/text_color"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/textView61"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="20dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Pay Type"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="20sp" />

                <TableLayout
                    android:id="@+id/re_table"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="5dp">


                </TableLayout>
            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="15dp"
                    android:layout_marginRight="15dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/b7"
                        android:layout_width="120dp"
                        android:layout_height="70dp"
                        android:layout_margin="3dp"
                        android:background="@drawable/numbers_buttons"
                        android:text="@string/seven"
                        android:textColor="@color/text_color"
                        android:textSize="25sp" />

                    <Button
                        android:id="@+id/b8"
                        android:layout_width="120dp"
                        android:layout_height="70dp"
                        android:layout_margin="3dp"
                        android:background="@drawable/numbers_buttons"
                        android:text="@string/eight"
                        android:textColor="@color/text_color"
                        android:textSize="25sp" />

                    <Button
                        android:id="@+id/b9"
                        android:layout_width="120dp"
                        android:layout_height="70dp"
                        android:layout_margin="3dp"
                        android:background="@drawable/numbers_buttons"
                        android:text="@string/nine"
                        android:textColor="@color/text_color"
                        android:textSize="25sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="15dp"
                    android:layout_marginRight="15dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/b4"
                        android:layout_width="120dp"
                        android:layout_height="70dp"
                        android:layout_margin="3dp"
                        android:background="@drawable/numbers_buttons"
                        android:text="@string/four"
                        android:textColor="@color/text_color"
                        android:textSize="25sp" />

                    <Button
                        android:id="@+id/b5"
                        android:layout_width="120dp"
                        android:layout_height="70dp"
                        android:layout_margin="3dp"
                        android:background="@drawable/numbers_buttons"
                        android:text="@string/five"
                        android:textColor="@color/text_color"
                        android:textSize="25sp" />

                    <Button
                        android:id="@+id/b6"
                        android:layout_width="120dp"
                        android:layout_height="70dp"
                        android:layout_margin="3dp"
                        android:background="@drawable/numbers_buttons"
                        android:text="@string/sex"
                        android:textColor="@color/text_color"
                        android:textSize="25sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="15dp"
                    android:layout_marginRight="15dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/b1"
                        android:layout_width="120dp"
                        android:layout_height="70dp"
                        android:layout_margin="3dp"
                        android:background="@drawable/numbers_buttons"
                        android:text="@string/one"
                        android:textColor="@color/text_color"
                        android:textSize="25sp" />

                    <Button
                        android:id="@+id/b2"
                        android:layout_width="120dp"
                        android:layout_height="70dp"
                        android:layout_margin="3dp"
                        android:background="@drawable/numbers_buttons"
                        android:text="@string/two"
                        android:textColor="@color/text_color"
                        android:textSize="25sp" />

                    <Button
                        android:id="@+id/b3"
                        android:layout_width="120dp"
                        android:layout_height="70dp"
                        android:layout_margin="3dp"
                        android:background="@drawable/numbers_buttons"
                        android:text="@string/three"
                        android:textColor="@color/text_color"
                        android:textSize="25sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="15dp"
                    android:layout_marginRight="15dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/dot"
                        android:layout_width="120dp"
                        android:layout_height="70dp"
                        android:layout_margin="3dp"
                        android:background="@drawable/numbers_buttons"
                        android:text="."
                        android:textColor="@color/text_color"
                        android:textSize="25sp" />

                    <Button
                        android:id="@+id/b0"
                        android:layout_width="120dp"
                        android:layout_height="70dp"
                        android:layout_margin="3dp"
                        android:background="@drawable/numbers_buttons"
                        android:text="@string/zero"
                        android:textColor="@color/text_color"
                        android:textSize="25sp" />

                    <Button
                        android:id="@+id/save"
                        android:layout_width="120dp"
                        android:layout_height="70dp"
                        android:layout_margin="3dp"
                        android:background="@drawable/done_buttons"
                        android:text="@string/save_"
                        android:textColor="@color/text_color"
                        android:textSize="20sp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="15dp"
                    android:layout_marginRight="15dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/exits"
                        android:layout_width="371dp"
                        android:layout_height="70dp"
                        android:layout_margin="3dp"
                        android:background="@drawable/clear_buttons"
                        android:text="@string/exit"
                        android:textColor="@color/text_color"
                        android:textSize="20sp" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/textView58"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView" />

</LinearLayout>