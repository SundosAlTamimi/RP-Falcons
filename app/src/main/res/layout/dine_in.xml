<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/layer1"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/layer3"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginVertical="3dp"
                android:text="@string/dine_in"
                android:textColor="@color/text_color"
                android:textSize="20sp" />


        </LinearLayout>

        <Button
            android:id="@+id/save"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_marginLeft="800dp"
            android:layout_marginStart="800dp"
            android:layout_marginVertical="3dp"
            android:background="@color/colorPrimaryLight"
            android:textSize="15sp" />

        <Button
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginVertical="3dp"
            android:background="@color/colorAccent"
            android:textSize="15sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginTop="5dp"
            android:layout_weight="5"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/layer1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/main"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="2dp"
                    android:layout_marginRight="2dp"
                    android:layout_weight="1"
                    android:background="@color/dark_blue"
                    android:text="@string/main_floor"
                    android:textAllCaps="false"
                    android:textColor="@color/text_color" />

                <Button
                    android:id="@+id/first_f"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginHorizontal="2dp"
                    android:layout_weight="1"
                    android:background="@color/gray"
                    android:text="@string/first_floor"
                    android:textAllCaps="false"
                    android:textColor="@color/text_color" />

                <Button
                    android:id="@+id/second_f"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginHorizontal="2dp"
                    android:layout_weight="1"
                    android:background="@color/gray"
                    android:text="@string/second_floor"
                    android:textAllCaps="false"
                    android:textColor="@color/text_color" />


                <Button
                    android:id="@+id/third_f"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginHorizontal="2dp"
                    android:layout_weight="1"
                    android:background="@color/gray"
                    android:text="@string/third_floor"
                    android:textAllCaps="false"
                    android:textColor="@color/text_color" />

                <Button
                    android:id="@+id/fourth_f"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginHorizontal="2dp"
                    android:layout_weight="1"
                    android:background="@color/gray"
                    android:text="@string/fourth_floor"
                    android:textAllCaps="false"
                    android:textColor="@color/text_color" />

                <Button
                    android:id="@+id/fifth_f"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginStart="2dp"
                    android:layout_weight="1"
                    android:background="@color/gray"
                    android:text="@string/fifth_floor"
                    android:textAllCaps="false"
                    android:textColor="@color/text_color" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/dark_blue"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:background="@drawable/floor">

                    <RelativeLayout
                        android:id="@+id/land"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/add_table_list"
                        android:layout_width="146dp"
                        android:layout_height="228dp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginBottom="84dp"
                        android:layout_marginEnd="0dp"
                        android:layout_marginRight="0dp"
                        android:layout_marginTop="40dp"
                        android:background="@drawable/rectangle"
                        android:orientation="vertical">

                        <Button
                            android:id="@+id/add_squared_table"
                            android:layout_width="110dp"
                            android:layout_height="90dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="30sp"
                            android:background="@drawable/table1" />

                        <Button
                            android:id="@+id/add_circled_table"
                            android:layout_width="130dp"
                            android:layout_height="90dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="30sp"
                            android:background="@drawable/table2" />

                    </LinearLayout>

                    <Button
                        android:id="@+id/add_icon"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginEnd="0dp"
                        android:layout_marginRight="0dp"
                        android:layout_marginTop="0dp"
                        android:background="@drawable/add" />


                </RelativeLayout>

            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/rightBorder"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:background="@drawable/right_border"
            android:orientation="vertical"
            android:paddingTop="15dp">


            <TextView
                android:id="@+id/move"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center"
                android:text="@string/move"
                android:textColor="@color/text_color"
                android:textSize="15sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginHorizontal="20dp"
                android:background="@color/text_color"
                android:gravity="center" />


            <TextView
                android:id="@+id/merge"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center"
                android:text="@string/merge"
                android:textColor="@color/text_color"
                android:textSize="15sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginHorizontal="20dp"
                android:background="@color/text_color"
                android:gravity="center" />

            <TextView
                android:id="@+id/reservation"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center"
                android:text="@string/reservation"
                android:textColor="@color/text_color"
                android:textSize="15sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginHorizontal="20dp"
                android:background="@color/text_color"
                android:gravity="center" />

            <TextView
                android:id="@+id/takeAway"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center"
                android:text="@string/take_away"
                android:textColor="@color/text_color"
                android:textSize="15sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginHorizontal="20dp"
                android:background="@color/text_color"
                android:gravity="center" />

            <TextView
                android:id="@+id/close"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center"
                android:text="@string/close"
                android:textColor="@color/text_color"
                android:textSize="15sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginHorizontal="20dp"
                android:background="@color/text_color"
                android:gravity="center" />

            <TextView
                android:id="@+id/cashDrawer"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center"
                android:text="@string/cash_drawer"
                android:textColor="@color/text_color"
                android:textSize="15sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginHorizontal="20dp"
                android:background="@color/text_color"
                android:gravity="center" />

            <TextView
                android:id="@+id/refund"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center"
                android:text="@string/refund"
                android:textColor="@color/text_color"
                android:textSize="15sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginHorizontal="20dp"
                android:background="@color/text_color"
                android:gravity="center" />

            <TextView
                android:id="@+id/checkOut"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center"
                android:text="@string/check_out"
                android:textColor="@color/text_color"
                android:textSize="15sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginHorizontal="20dp"
                android:background="@color/text_color"
                android:gravity="center" />

            <TextView
                android:id="@+id/reprint"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center"
                android:text="@string/reprint"
                android:textColor="@color/text_color"
                android:textSize="15sp" />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>