<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="950dp"
    android:layout_height="wrap_content"
    android:background="@color/layer3"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/layer3"
        android:orientation="vertical"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/printing"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/report_icon" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView52"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginEnd="50dp"
                    android:layout_marginRight="50dp"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:text="@string/sales_report_by_card_type"
                    android:textColor="@color/text_color"
                    android:textSize="25sp" />

                <Button
                    android:id="@+id/doneReport"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="20dp"
                    android:background="@color/colorPrimary"
                    android:text="@string/Preview"
                    android:textAllCaps="false"
                    android:textColor="@color/layer1"
                    android:textSize="15dp" />

                <Button
                    android:id="@+id/exitReport"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="20dp"
                    android:background="@color/exit"
                    android:text="@string/exit"
                    android:textAllCaps="false"
                    android:textColor="@color/layer1"
                    android:textSize="15dp" />

                <Button
                    android:id="@+id/exportReport"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="20dp"
                    android:background="@color/dark_blue"
                    android:text="@string/export"
                    android:textAllCaps="false"
                    android:textColor="@color/layer1"
                    android:textSize="15dp" />

                <Button
                    android:id="@+id/printReport"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/printer" />
            </LinearLayout>


        </LinearLayout>

        <TextView
            android:id="@+id/textView56"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:background="@color/text_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@color/layer4"
            android:orientation="vertical">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:background="@color/layer4"
                android:padding="10dp">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="107dp"
                        android:layout_height="wrap_content"
                        android:text="@string/from_date"
                        android:textColor="@color/text_color"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/frDateCard"
                        android:layout_width="150dp"
                        android:layout_height="30dp"
                        android:layout_marginRight="20dp"
                        android:background="@color/layer2"
                        android:gravity="center"
                        android:textColor="@color/text_color"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="96dp"
                        android:layout_height="wrap_content"
                        android:text="@string/to_date"
                        android:textColor="@color/text_color"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/toDateCard"
                        android:layout_width="150dp"
                        android:layout_height="30dp"
                        android:background="@color/layer2"
                        android:gravity="center"
                        android:textColor="@color/text_color"
                        android:textSize="18sp" />


                </TableRow>


            </TableLayout>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="5dp"
                    android:text="@string/shift_name"
                    android:textColor="@color/text_color"
                    android:textSize="18sp" />

                <Spinner
                    android:id="@+id/shiftName"
                    android:layout_width="170dp"
                    android:layout_height="30dp" />

                <TextView
                    android:id="@+id/textView67"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="@string/card_type"
                    android:textColor="@color/text_color"
                    android:textSize="18sp" />

                <Spinner
                    android:id="@+id/cardType"
                    android:layout_width="170dp"
                    android:layout_height="30dp" />

                <TextView
                    android:id="@+id/text2"
                    android:layout_width="81dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:text="@string/point_of_sale"
                    android:textColor="@color/text_color"
                    android:textSize="18sp" />

                <Spinner
                    android:id="@+id/posNo"
                    android:layout_width="170dp"
                    android:layout_height="30dp" />
            </TableRow>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp">


            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="2dp">

                <TextView
                    android:id="@+id/textView62"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="1dp"
                    android:layout_weight="1"
                    android:background="@color/blue_ice"
                    android:gravity="center"
                    android:padding="2dp"
                    android:text="#"
                    android:textColor="@color/layer1"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="1dp"
                    android:layout_weight="1"
                    android:background="@color/blue_ice"
                    android:gravity="center"
                    android:padding="2dp"
                    android:text="@string/date"
                    android:textColor="@color/layer1"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="1dp"
                    android:layout_weight="1"
                    android:background="@color/blue_ice"
                    android:gravity="center"
                    android:padding="2dp"
                    android:text="@string/time"
                    android:textColor="@color/layer1"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="1dp"
                    android:layout_weight="1"
                    android:background="@color/blue_ice"
                    android:gravity="center"
                    android:padding="2dp"
                    android:text="@string/pos"
                    android:textColor="@color/layer1"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="1dp"
                    android:layout_weight="1"
                    android:background="@color/blue_ice"
                    android:gravity="center"
                    android:padding="2dp"
                    android:text="@string/invoice_no"
                    android:textColor="@color/layer1"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="1dp"
                    android:layout_weight="1"
                    android:background="@color/blue_ice"
                    android:gravity="center"
                    android:padding="2dp"
                    android:text="@string/net_total_"
                    android:textColor="@color/layer1"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="1dp"
                    android:layout_weight="1"
                    android:background="@color/blue_ice"
                    android:gravity="center"
                    android:padding="2dp"
                    android:text="@string/customer_name"
                    android:textColor="@color/layer1"
                    android:textSize="16sp" />
            </TableRow>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="271dp">

                <TableLayout
                    android:id="@+id/cardTypeTable"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="90dp">

                </TableLayout>
            </ScrollView>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView68"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="@string/total"
                android:textColor="@color/exit"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="0.00"
                android:textColor="@color/exit"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>


    </LinearLayout>

</LinearLayout>