<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="900dp"
    android:layout_height="wrap_content"
    android:background="@color/layer3"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="1000dp"
        android:layout_height="wrap_content"
        android:background="@color/layer3"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/layer3"
            android:orientation="vertical"
            android:padding="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/printing"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@drawable/report_icon" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView52"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="5dp"
                        android:layout_marginEnd="50dp"
                        android:layout_marginRight="50dp"
                        android:layout_weight="3"
                        android:gravity="center"
                        android:text="@string/re_cancellation_supervisor"
                        android:textColor="@color/text_color"
                        android:textSize="25sp" />

                    <Button
                        android:id="@+id/doneReport"
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:layout_marginRight="20dp"
                        android:background="@color/colorPrimary"
                        android:text="@string/Preview"
                        android:textAllCaps="false"
                        android:textColor="@color/layer1"
                        android:textSize="15dp" />

                    <Button
                        android:id="@+id/exitReport"
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:layout_marginRight="20dp"
                        android:background="@color/exit"
                        android:text="@string/exit"
                        android:textAllCaps="false"
                        android:textColor="@color/layer1"
                        android:textSize="15dp" />

                    <Button
                        android:id="@+id/exportReport"
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:layout_marginRight="20dp"
                        android:background="@color/dark_blue"
                        android:text="@string/export"
                        android:textAllCaps="false"
                        android:textColor="@color/layer1"
                        android:textSize="15dp" />

                    <Button
                        android:id="@+id/printReport"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/printer" />
                </LinearLayout>


            </LinearLayout>

            <TextView
                android:id="@+id/textView56"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:background="@color/text_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@color/layer4"
                android:orientation="vertical">

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:background="@color/layer4"
                    android:padding="10dp">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="77dp"
                            android:layout_height="wrap_content"
                            android:text="@string/date"
                            android:textColor="@color/text_color"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/frDate"
                            android:layout_width="150dp"
                            android:layout_height="30dp"
                            android:layout_marginRight="20dp"
                            android:background="@color/layer2"
                            android:gravity="center"
                            android:textColor="@color/text_color"
                            android:textSize="18sp" />


                        <CheckBox
                            android:id="@+id/admin_ok"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="40dp"
                            android:layout_marginStart="40dp"
                            android:text="@string/admin_ok"
                            android:textColor="@color/text_color"
                            android:textSize="18sp" />

                    </TableRow>


                </TableLayout>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/textView67"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="@string/shift_name"
                        android:textColor="@color/text_color"
                        android:textSize="18sp" />

                    <Spinner
                        android:id="@+id/shiftName"
                        android:layout_width="170dp"
                        android:layout_height="30dp" />

                    <TextView
                        android:id="@+id/text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="5dp"
                        android:text="CashierNo "
                        android:textColor="@color/text_color"
                        android:textSize="18sp" />

                    <Spinner
                        android:id="@+id/casherNo"
                        android:layout_width="170dp"
                        android:layout_height="30dp" />

                    <TextView
                        android:id="@+id/text2"
                        android:layout_width="81dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:text="@string/point_of_sale"
                        android:textColor="@color/text_color"
                        android:textSize="18sp" />

                    <Spinner
                        android:id="@+id/posNo"
                        android:layout_width="170dp"
                        android:layout_height="30dp" />
                </TableRow>

            </LinearLayout>

            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="350dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginRight="5dp"
                    android:orientation="vertical"
                    android:padding="5dp">


                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2dp">

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="1dp"
                            android:layout_weight="1"
                            android:background="@color/blue_ice"
                            android:gravity="center"
                            android:padding="1dp"
                            android:text="@string/shift"
                            android:textColor="@color/layer1"
                            android:textSize="18sp" />

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="1dp"
                            android:layout_weight="1"
                            android:background="@color/blue_ice"
                            android:gravity="center"
                            android:padding="1dp"
                            android:text="@string/user"
                            android:textColor="@color/layer1"
                            android:textSize="18sp" />

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="1dp"
                            android:layout_weight="1"
                            android:background="@color/blue_ice"
                            android:gravity="center"
                            android:padding="1dp"
                            android:text="@string/pos"
                            android:textColor="@color/layer1"
                            android:textSize="18sp" />

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="1dp"
                            android:layout_weight="1"
                            android:background="@color/blue_ice"
                            android:gravity="center"
                            android:padding="1dp"
                            android:text="@string/change_over"
                            android:textColor="@color/layer1"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="1dp"
                            android:layout_weight="1"
                            android:background="@color/blue_ice"
                            android:gravity="center"
                            android:padding="1dp"
                            android:text="@string/sales_"
                            android:textColor="@color/layer1"
                            android:textSize="18sp" />

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="1dp"
                            android:layout_weight="1"
                            android:background="@color/blue_ice"
                            android:gravity="center"
                            android:padding="1dp"
                            android:text="@string/physical"
                            android:textColor="@color/layer1"
                            android:textSize="18sp" />

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="1dp"
                            android:layout_weight="1"
                            android:background="@color/blue_ice"
                            android:gravity="center"
                            android:padding="1dp"
                            android:text="@string/difference"
                            android:textColor="@color/layer1"
                            android:textSize="17sp" />

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="1dp"
                            android:layout_weight="1"
                            android:background="@color/blue_ice"
                            android:gravity="center"
                            android:padding="1dp"
                            android:text="@string/reason"
                            android:textColor="@color/layer1"
                            android:textSize="18sp" />

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="1dp"
                            android:layout_weight="1"
                            android:background="@color/blue_ice"
                            android:gravity="center"
                            android:padding="1dp"
                            android:text="@string/to_user"
                            android:textColor="@color/layer1"
                            android:textSize="18sp" />

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="1dp"
                            android:layout_weight="1"
                            android:background="@color/blue_ice"
                            android:gravity="center"
                            android:padding="1dp"
                            android:text="@string/remark"
                            android:textColor="@color/layer1"
                            android:textSize="18sp" />

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="1dp"
                            android:layout_weight="1"
                            android:background="@color/blue_ice"
                            android:gravity="center"
                            android:padding="1dp"
                            android:text="@string/update_by"
                            android:textColor="@color/layer1"
                            android:textSize="18sp" />

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="1dp"
                            android:layout_weight="1"
                            android:background="@color/blue_ice"
                            android:gravity="center"
                            android:padding="1dp"
                            android:text="@string/till_ok"
                            android:textColor="@color/layer1"
                            android:textSize="18sp" />

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="1dp"
                            android:layout_weight="1"
                            android:background="@color/blue_ice"
                            android:gravity="center"
                            android:padding="1dp"
                            android:text="@string/kind"
                            android:textColor="@color/layer1"
                            android:textSize="18sp" />

                    </TableRow>

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TableLayout
                            android:id="@+id/canceledTable"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingBottom="100dp">

                        </TableLayout>
                    </ScrollView>

                </LinearLayout>

            </HorizontalScrollView>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/hiddenLinear"
        android:layout_width="760dp"
        android:layout_height="170dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:alpha="90"
        android:visibility="invisible"
        android:background="@color/layer2"
        android:orientation="horizontal"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="match_parent">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="3dp"
                android:background="@drawable/focused_table">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="25dp"
                        android:layout_margin="1dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/category"
                        android:textColor="@color/exit"
                        android:textSize="13sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="25dp"
                        android:layout_margin="1dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/qty"
                        android:textColor="@color/exit"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="25dp"
                        android:layout_margin="1dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/total"
                        android:textColor="@color/exit"
                        android:textSize="13sp"
                        android:textStyle="bold" />



                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:layout_margin="1dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="1dp"
                        android:layout_weight="1"
                        android:background="@color/text_color"
                        android:gravity="center" />

                </TableRow>

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TableLayout
                        android:id="@+id/categoryTable"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    </TableLayout>

                </ScrollView>
            </TableLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_weight="1"
                    android:gravity=""
                    android:text="@string/credit_card"
                    android:textColor="@color/text_color"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/creditCard"
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_marginHorizontal="10dp"
                    android:layout_weight="1"
                    android:inputType="numberDecimal"
                    android:background="@drawable/focused_table"
                    android:text="@string/zero_decimal"
                    android:paddingHorizontal="10dp"
                    android:textColor="@color/text_color"
                    android:textSize="15sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_weight="1"
                    android:gravity=""
                    android:text="@string/cheque"
                    android:textColor="@color/text_color"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/cheque"
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_marginHorizontal="10dp"
                    android:layout_weight="1"
                    android:inputType="numberDecimal"
                    android:background="@drawable/focused_table"
                    android:text="@string/zero_decimal"
                    android:paddingHorizontal="10dp"
                    android:textColor="@color/text_color"
                    android:textSize="15sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_weight="1"
                    android:gravity=""
                    android:text="@string/gift_card"
                    android:textColor="@color/text_color"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/giftCard"
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_marginHorizontal="10dp"
                    android:layout_weight="1"
                    android:inputType="numberDecimal"
                    android:background="@drawable/focused_table"
                    android:text="@string/zero_decimal"
                    android:paddingHorizontal="10dp"
                    android:textColor="@color/text_color"
                    android:textSize="15sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_weight="1"
                    android:gravity=""
                    android:text="@string/credit"
                    android:textColor="@color/text_color"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/credit"
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_marginHorizontal="10dp"
                    android:layout_weight="1"
                    android:inputType="numberDecimal"
                    android:background="@drawable/focused_table"
                    android:text="@string/zero_decimal"
                    android:paddingHorizontal="10dp"
                    android:textColor="@color/text_color"
                    android:textSize="15sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_weight="1"
                    android:gravity=""
                    android:text="@string/point"
                    android:textColor="@color/text_color"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/point"
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_marginHorizontal="10dp"
                    android:layout_weight="1"
                    android:inputType="numberDecimal"
                    android:background="@drawable/focused_table"
                    android:text="@string/zero_decimal"
                    android:paddingHorizontal="10dp"
                    android:textColor="@color/text_color"
                    android:textSize="15sp" />


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="10dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/updateBlindClose"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@color/layer4"
                android:text="@string/update_blind_close"
                android:textAllCaps="false"
                android:textColor="@color/text_color"
                android:textSize="13dp" />

            <Button
                android:id="@+id/tillerOk"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:background="@color/layer4"
                android:text="@string/tiller_ok"
                android:textAllCaps="false"
                android:textColor="@color/text_color"
                android:textSize="13dp" />

            <Button
                android:id="@+id/print_denomination"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:background="@color/layer4"
                android:text="@string/print_denomination"
                android:textAllCaps="false"
                android:textColor="@color/text_color"
                android:textSize="13dp" />

            <Button
                android:id="@+id/move_change_over_to_another_user"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:layout_marginTop="5dp"
                android:background="@color/layer4"
                android:paddingHorizontal="20dp"
                android:text="@string/move_change_over_to_another_user"
                android:textAllCaps="false"
                android:textColor="@color/text_color"
                android:textSize="13dp" />

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>